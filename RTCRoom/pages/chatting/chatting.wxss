.commentInput {
    width: 100%;
    height: 90rpx;
    background-color: #e5e5e5;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    border-top: 1px solid #c6c6c6;
    z-index: 10;
}

.commentInput input {
    background-color: white;
    border-radius: 10rpx;
    height: 70rpx;
    position: relative;
    padding-left: 30rpx;
    margin: 10rpx 130rpx 10rpx 10rpx;
}

.commentInput button {
    position: absolute;
    right: 15rpx;
    top: 10rpx;
    background-color: #10aeff;
    color: white;
    border-radius: 10rpx;
    width: 100rpx;
    margin: 0rpx;
    padding: 0rpx;
    font-size: 28rpx;
}

.title {
    width: 100%;
    height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-weight: bold;
    background-color: #edece8;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    border-bottom: 1px solid #c8c8cd;
    z-index: 10;
}

.title image {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    top: 10rpx;
    vertical-align: middle;
}

.classmsg {
    margin-top: 20rpx;
}

.classmsg .leftItem image {
    left: 0;
    top: 0;
}

.classmsg .rightItem image {
    right: 0;
    top: 0;
}

classmsg .leftItem .text {
    text-align: left;
}

.classmsg .rightItem .text {
    text-align: right;
}

.chatmsg {
    position: relative;
}

.chatmsg image {
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    vertical-align: middle;
}

.chatmsg .text {
    margin: auto 80rpx;
    font-size: 30rpx;
    min-height: 60rpx;
    word-break: break-all;
    line-height: 60rpx;
}

.content {
    padding: 30rpx;
    z-index: 0;
    position: absolute;
    bottom: 100rpx;
    /* margin: 0; */
    width: calc(100% - 60rpx);
}

.listcon {
    margin: 0;
    overflow: scroll;
}
