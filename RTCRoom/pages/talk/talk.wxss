#camera-push {
    width: 30vw;
    height: 45vw;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

#video-player {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.cover-box {
    color: white;
    width: calc(100% - 6rpx);
    height: 40rpx;
    border: 1px solid #fff;
    text-align: center;
}
.cover-time{
    margin: 0 auto;
}
.cover-view{
    width: 100%;
    height: 100%;
}

.push-txt{
    color: white;
    position: absolute;
}
.cover-nickname{
    left: 30rpx;
    top:0rpx;
    font-size: 40rpx;
}
.cover-city{
    left: 30rpx;
    top:50rpx;
    font-size: 25rpx;
    height: 30rpx;
}
.cover-gift{
     position: absolute;
     right: 20rpx;
     bottom:20rpx;
     width: 90rpx;
     height: 90rpx;
 }
.cover-close{
    position: absolute;
    left: calc(50% - 45rpx);
    bottom:20rpx;
    width: 90rpx;
    height: 90rpx;
}
.cover-face{
    position: absolute;
    left: 20rpx;
    bottom:20rpx;
    width: 90rpx;
    height: 90rpx;
}
.cover-friends{
    position: absolute;
    color: white;
    top:105rpx;
    left: 50rpx;
}
.cover-friends-background{
    position: absolute;
    border: none;
    background-color: white;
    width: 220rpx;
    height: 50rpx;
    font-size: 30rpx;
    border-radius: 25rpx;
    top:100rpx;
    opacity: 0.5;
    left: 30rpx;
}