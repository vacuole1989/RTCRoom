#camera-push {
    width: 30vw;
    height: 45vw;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

#video-player {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.cover-box {
    color: white;
    width: calc(100% - 6rpx);
    height: 40rpx;
    border: 1px solid #fff;
    text-align: center;
}
.cover-time{
    margin: 0 auto;
}
