.leftChatbox {
    position: relative;
     width: auto; 
    min-height: 50px;
    background: #fff;
    border-radius: 5px;
    line-height: 50px;
    margin-left: 10px;
    word-break: break-word;
    color: black;
    padding: 5px;
    line-height: 18px;
    display: inline-block;
}
.rightClass{
    text-align: right;
}
.leftClass{
    text-align:left;
}
.leftChatbox::after {
    content: "";
    display: block;
    position: absolute;
    width: 0;
    height: 0;
    border: 8px solid transparent;
    border-right-color: #fff;
    top: 15px;
    left: -16px;
}

.rightChatbox {
    position: relative;
     width: auto; 
    min-height: 50px;
    background: #a2e65b;
    border-radius: 5px;
    line-height: 50px;
    margin-left: 10px;
    word-break: break-word;
    color: black;
    padding: 5px;
    line-height: 18px;
    display: inline-block;
}

.rightChatbox::after {
    content: "";
    display: block;
    position: absolute;
    width: 0;
    height: 0;
    border: 8px solid transparent;
    border-left-color: #a2e65b;
    top: 15px;
    right: -16px;
}

.commentInput {
    width: 100%;
    height: 90rpx;
    background-color: #e5e5e5;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    border-top: 1px solid #c6c6c6;
    z-index: 10;
}

.commentInput input {
    background-color: white;
    border-radius: 10rpx;
    height: 70rpx;
    position: relative;
    padding-left: 30rpx;
    margin: 10rpx 130rpx 10rpx 10rpx;
}

.commentInput button {
    position: absolute;
    right: 15rpx;
    top: 10rpx;
    background-color: #10aeff;
    color: white;
    border-radius: 10rpx;
    width: 100rpx;
    margin: 0rpx;
    padding: 0rpx;
    font-size: 28rpx;
}

.title {
    width: 100%;
    height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-weight: bold;
    background-color: #edece8;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    border-bottom: 1px solid #c8c8cd;
    z-index: 10;
}

.title image {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    top: 10rpx;
    vertical-align: middle;
}

