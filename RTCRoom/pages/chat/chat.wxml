<view class="container chat">
    <navigator url='/pages/friendask/friendask' class="chat-item flex-wrp">
        <view class="avatar flex-item">
            <image src="../Resources/addUser.png"></image>
        </view>
        <view class="chat-content flex-item">
            <view class="chat-sourcetop">
                <text class="chatmatetop">好友请求</text>
            </view>
        </view>
        <view class="msgTip" wx:if="{{msgCount.tip>0}}">{{msgCount.tip}}</view>
    </navigator>
    <view class="chat-item flex-wrp">
        <view class="avatar flex-item">
            <image src="../Resources/historyUser.png"></image>
        </view>
        <view class="chat-content flex-item">
            <view class="chat-sourcetop">
                <text class="chatmatetop">遇到过的人</text>
            </view>
        </view>
    </view>
    <navigator class="chat-item flex-wrp" wx:for="{{friends}}" wx:key="seqId" url='/pages/chatting/chatting?seqId={{item.seqId}}'>
        <view class="avatar flex-item">
            <image src="{{item.avatarUrl}}"></image>
        </view>
        <view class="chat-content flex-item">
            <view class="chat-source">
                <text class="chatmate">{{item.nickName}}</text>
            </view>
            <text class="chat-txt">已经成为好友</text>
        </view>
        <view class="msgTip" wx:if="{{item.unRead>0}}">{{item.unRead}}</view>
    </navigator>

</view>