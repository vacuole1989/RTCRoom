page {
    height: auto;
}

.container {
    padding: 0;
    font-size: 14rpx;
    color: #000;
}

.chat-item {
    /* width: 725rpx; */
    background: #fff;
    padding: 25rpx 25rpx 25rpx 0;
    border-bottom: solid 1px #ebebeb;
    position: relative;
    z-index: 2;
}

.chat-item  image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
}

.chat-item .avatar {
    flex: 1;
}

.chat-item .chat-content {
    flex: 4;
    text-align: left;
}

.chat-item .chat-content text {
    /*display: block;*/
}

.chat-item .chat-content .chat-source {
    color: #818a8f;
    font-size: 28rpx;
    padding: 4rpx 0 8rpx 0;
}

.chat-item .chat-content .chat-sourcetop {
    color: #818a8f;
    font-size: 28rpx;
    padding: 16rpx 0 6rpx 0;
}

.chat-item .chat-content .chat-sourcetop .chatmatetop {
    font-size: 34rpx;
    color: #000;
    text-align: left;
}

.chat-item .chat-content .chat-source .chatmate {
    font-size: 34rpx;
    color: #000;
    text-align: left;
}

.chat-item .chat-content .chat-source .lasttime {
    flex: 1;
    font-size: 22rpx;
    float: right;
    vertical-align: text-bottom;
}

.chat-item .chat-content .chat-txt {
    display: block;
    color: #7b7b7b;
    font-size: 26rpx;
    line-height: 34rpx;
}

.msgTip {
    position: absolute;
    min-width: 40rpx;
    height: 40rpx;
    right: 30rpx;
    top: calc(50% - 20rpx);
    background-color: red;
    border-radius: 20rpx;
    color: white;
    text-align: center;
    font-size: 30rpx;
    padding: 0rpx 6rpx;
}

view {
    box-sizing: border-box;
}

.item-box {
    width: 700rpx;
    margin: 0 auto;
    padding: 40rpx 0;
}

.items {
    width: 100%;
}

.item {
    position: relative;
    border-top: 2rpx solid #eee;
    height: 120rpx;
    line-height: 120rpx;
    overflow: hidden;
}

.item:last-child {
    border-bottom: 2rpx solid #eee;
}

.inner {
    position: absolute;
    top: 0;
}

.inner.txt {
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding: 0 35rpx;
    transition: left 0.2s ease-in-out;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size:28rpx;

}

.inner.del {
    background-color: #e64340;
    width: 180rpx;
    text-align: center;
    z-index: 4;
    right: 0;
    color: #fff;
    font-size:28rpx;
}

.item-icon {
    width: 64rpx;
    vertical-align: middle;
    margin-right: 16rpx;
}
