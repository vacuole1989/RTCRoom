/* pages/livepushertest/room/room.wxss */
.container-box {
  background-image: url(https://mc.qcloudimg.com/static/img/7da57e0050d308e2e1b1e31afbc42929/bg.png);
  background-color: #333;
  background-repeat:no-repeat;
  background-size: cover;
  height: 100vh;
}
.img-box {
  position: relative;
  display:inline-block;
  height: 10vh;
  width: 13.6vw;
  left:22.8vw;
  vertical-align: middle;
}
.img-box image {
  position: absolute;
  width: 8vw;
  height: 8vw;
  top: 1vh; 
  left: 2.8vw;
}
.img-box image :active{
  opacity:0.55;
}
.img-box text {
  position: absolute;
  color: #ffffff;
  width: 100%;
  font-size:10px;
  top: 10vw;
  text-align: center;
}
.operate {
  margin-top: 2vh;
}
.comment-box {
  position: relative;
  width: 100vw;
  height: calc(91vh - 72.83vw);
  margin-top: 2vw;
}
.comment {
  width: 100vw;
  height: calc(90vh - 80.33vw - 1.4rem);
  font-size: 13px;

}
.comment .comment-detail {
  padding: 5px 20px;
  color: #999;
}
.color-blue {
  color: #00ecfe;
}
.color-org {
  color: #fe9500;
}
.comment-input {
  position: absolute;
  bottom: 0;
  width: 90vw; 
  background-color: #fff;
  color: #b8b8b8;
  padding: 5vw 5vw;
}
.player-box {
	position: relative; 
	display: inline-block; 
	overflow: hidden;
	width: 66vw;
	height: 61.33vw; 
	text-align: center;
  margin-bottom: 2vw;
  margin-left: 1vw;
  vertical-align: top;
}
.poster {
	position: absolute;  
	/* width: 49vw;  
	height: 65.33vw;  */
  width: 100%;
	height: 100%; 
	background-color: #000;
  opacity:0.55;
}
live-player {
  /* width: 49vw;
  height: 65.33vw; */
  width: 100%;
	height: 100%; 
}
.character {
  position: absolute;
  left: 0;
  bottom: 0;
  /* z-index: 1000; */
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}
.set {
  position: absolute;
  width: 32px;
  height: 56px;
  top: 50%;
  left: 50%;
  margin: -28px 0 0 -16px;
}
.loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}
.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
