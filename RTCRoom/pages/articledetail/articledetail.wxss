/**index.wxss**/

.search {
    position: relative;
    background-color: #f1f1f1;
}

.search input {
    color: black;
    background-color: white;
    font-size: 30rpx;
    font-weight: bold;
    height: 96rpx;
    border-radius: 15rpx;
    margin: 0rpx 10rpx;
    padding-left: 100rpx;
    margin-bottom: 20rpx;
}

.search image {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    top: 10rpx;
    left: 10rpx;
}

.container {
    /* height: 1500rpx; */
}

.container .search {
    width: 96%;
    height: 80rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.container .search-left {
    flex: 8;
    background: #fff;
    text-align: left;
    border-radius: 8rpx;
}

.container .search-left input {
    display: inline-block;
    height: 65rpx;
    line-height: 65rpx;
    font-size: 30rpx;
    padding: 10rpx 0;
}

.search-placeholder {
    color: #000;
    line-height: 65rpx;
}

.container .search .search-left image {
    display: inline-block;
    width: 64rpx;
    height: 64rpx;
    margin-bottom: 10rpx;
}

.container .search .search-right {
    flex: 1;
}

.container .search .search-right image {
    width: 45rpx;
    height: 45rpx;
    padding: 10rpx;
}

.container {
    height: unset;
    padding: 0;
    font-size: 14rpx;
    background: #f0f4f3;
    color: #000;
    
}

.container .feed-item {
    padding: 30rpx 30rpx 20rpx;
    background: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    box-shadow: 0 2px 5px #eee;
    margin: 0 auto;
}
.container .feed-item .feed-source {
    left: 0;
    height: 70rpx;
    margin: 30rpx 0 15rpx 0;
}

.container .feed-item .feed-time {
    right: 0;
    top: 115rpx;
    font-size: 25rpx;
    position: absolute;
    color: #ccc;
    padding-right: 30rpx;
}

.container .feed-item .under-line {
    width: 100%;
    height: 4rpx;
    border-bottom: 1rpx solid #ccc;
}

.container .feed-item .feed-source .avatar {
    position: relative;
    display: inline-block;
}

.container .feed-item .feed-source a {
    display: inline-block;
    height: 40rpx;
}

.container .feed-item .feed-source .avatar image {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    top: 10rpx;
    vertical-align: middle;
}
.container .feed-item .feed-source .small image {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    border-radius: 40rpx;
    top: 20rpx;
    vertical-align: middle;
}

.container .feed-item .feed-source text {
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    vertical-align: middle;
    margin: 0 0 0 15rpx;
    color: #000;
    font-size: 30rpx;
    font-weight: bold;
}

.container .feed-item .feed-source .item-more {
    display: inline-block;
    width: 40rpx;
    height: 45rpx;
    float: right;
}

.container .feed-item .feed-content {
    padding: 10rpx 0 0 0;
}

.container .feed-item  .question text {
    font-size: 36rpx;
    line-height: 40rpx;
    text-space: 5rpx;
    font-weight: bold;
}

.container .feed-item .feed-content .answer-body {
    padding: 10rpx 0 0 0;
    font-size: 28rpx;
    color: #000;
}

.container .feed-item .feed-content .answer-body .answer-txt {
    line-height: 50rpx;
}

.container .feed-item .feed-content .answer-body .answer-actions {
    text-align: right;
}

.container .feed-item .feed-content .answer-body .answer-actions .detail-btn {
    width: 180rpx;
    border: 1px solid #ccc;
    height: 60rpx;
    text-align: center;
    font-size: 28rpx;
    line-height: 60rpx;
}

.container .feed-item .feed-content .answer-actions {
    width: 690rpx;
    padding: 10rpx 0 0;
    color: #a0acac;
}

.container .feed-item .feed-content .answer-actions view {
    display: inline-block;
    vertical-align: text-bottom;
    margin-right: 30rpx;
}

.container .feed-item .feed-content .answer-actions .dot ::after {
    content: "•";
}



