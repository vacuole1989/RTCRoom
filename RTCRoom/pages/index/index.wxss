.index-view {
  width: 100%;
  height: 100%;
  background-color: black;
}
#camera-push {
  width: 100%;
  height:100%;
  position: absolute;
}

.cover_box {
  width: 100%;
  height: 100%;
}

.center_bottom_btn {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  left: calc(50% - 90rpx);
  bottom: 20rpx;
}

.right_top_btn {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  right: 20rpx;
  top: 20rpx;
}

.left_top_btn {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  left: 20rpx;
  top: 20rpx;
}

.left_bottom_btn {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  left: 40rpx;
  bottom: 20rpx;
}

.right_bottom_btn {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  right: 40rpx;
  bottom: 20rpx;
}

.cover-input {
  position: relative;
  width: 65%;
  height: 80rpx;
  border: 4rpx solid #fff;
  border-radius: 40rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  color: white;
}

.cover-input .inner-text {
  margin-left: 70rpx;
  line-height: 80rpx;
  font-size: 40rpx;
}

.search-icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 10rpx;
  top: 10rpx;
}

